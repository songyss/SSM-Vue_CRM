<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csi.mapper.RoleMapper">
<!--    <cache/>-->

    <resultMap id="RoleResultMap" type="com.csi.domain.Role">
        <id property="id" column="id"/>
        <result property="roleName" column="role_name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

    <select id="findAll" resultMap="RoleResultMap">
        SELECT id, role_name, create_time, update_time, is_delete
        FROM roles
        where 1=1
        <if test="isDelete != null">
            AND is_delete = #{isDelete}
        </if>
        <if test="roleName != null and roleName != ''">
            AND role_name LIKE CONCAT('%', #{roleName}, '%')
    </if>
    </select>

    <select id="findById" parameterType="int" resultMap="RoleResultMap">
        SELECT id, role_name, create_time, update_time, is_delete
        FROM roles
        WHERE id = #{id} AND is_delete = 0
    </select>

    <insert id="save" parameterType="com.csi.domain.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO roles (role_name,is_delete)
        VALUES (#{roleName},#{isDelete})
    </insert>

    <update id="update" parameterType="com.csi.domain.Role">
        UPDATE roles
        <trim prefix="set" suffixOverrides=",">
            <if test="roleName != null">
                role_name = #{roleName},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        UPDATE roles
        SET is_delete = 1
        WHERE id = #{id}
    </delete>

</mapper>
